<h1>Every This is availabe <small>Sometimes</small></h1>
<p id="notice"><%= notice %></p>

<h1>Email: <%= @wish_list.user.email %></h1>
<!-- How ? -->
<h1>Name : <%= @wish_list.user_id %></h1>

<div class="row column text-center">
  <% @wish_list.wish_list_items.each do |item| %>
    <div class="row small-up-2 large-up-4">
      <div class="column">
      <img class ='thumbnail'>
      <h5><%= item.product.title %></h5>
      <p class="left price label product-label radius"><%= item.product.price %></p>
        <%= image_tag(item.product.image_url) %>
      </img>
      <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
      data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
      data-description="Buy the product"
      data-amount="500"
      data-locale="auto"></script>

      </div>
    </div>
  </div>
</div>




<% end %>
